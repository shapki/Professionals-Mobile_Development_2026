<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="FilterButtonStyle" parent="Widget.Material3.Button">
        <item name="cornerRadius">10dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>
    <style name="AddButtonStyle">
        <item name="cornerRadius">10dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>
    <style name="MatuleTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/matule_placeholder</item>
        <item name="placeholderTextColor">@color/matule_placeholder</item>

        <item name="boxBackgroundMode">outline</item>
        <item name="boxBackgroundColor">@color/matule_input_bg</item>

        <item name="boxStrokeColor">@color/matule_text_input_stroke_color_selector</item>
        <item name="boxStrokeWidth">1px</item>
        <item name="boxStrokeWidthFocused">1px</item>

        <item name="shapeAppearanceOverlay">@style/MatuleTextInputShape</item>

        <item name="android:textColor">@color/black</item>

        <item name="colorControlActivated">@color/matule_accent</item>
        <item name="colorControlHighlight">@color/matule_accent</item>
    </style>
    <style name="MatuleTextInputShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>
    <style name="MatuleEditTextStyle">
        <item name="android:background">@drawable/text_input_background</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:radius">10dp</item>
        <item name="android:textColorHint">@color/matule_caption</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:drawableTint">@color/matule_accent</item>
        <item name="android:textCursorDrawable">@drawable/text_cursor</item>
    </style>
    <style name="MatuleDropdownStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/dropdown_background</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">40dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:hint">Выберите</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_down</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>
    <style name="MatuleDropdownStyle2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/dropdown_background</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:hint">Выберите</item>
        <item name="android:textColorHint">@color/matule_caption</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_down</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>
    <style name="MatuleDropdownItemStyle" parent="Widget.AppCompat.TextView.SpinnerItem">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>
    <style name="MatuleDateInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Плейсхолдер и хинт -->
        <item name="hintTextColor">@color/matule_placeholder</item>
        <item name="placeholderTextColor">@color/matule_placeholder</item>

        <!-- Фон и контур -->
        <item name="boxBackgroundColor">@color/matule_input_bg</item>
        <item name="boxBackgroundMode">outline</item>

        <item name="boxStrokeColor">@color/matule_date_stroke_color_selector</item>
        <item name="boxStrokeWidth">1px</item>
        <item name="boxStrokeWidthFocused">1px</item>

        <item name="shapeAppearanceOverlay">@style/MatuleDateInputShape</item>
        <item name="android:textColor">@color/black</item>
        <item name="endIconTint">@color/matule_placeholder</item>
        <item name="colorControlActivated">@color/matule_accent</item>
    </style>

    <style name="MatuleDateInputShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10DP</item>
    </style>

    <style name="MatuleDateEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/matule_placeholder</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:inputType">number</item>
        <item name="android:digits">0123456789.</item>
        <item name="android:maxLength">10</item>
    </style>

    <style name="MatuleOutlinedButtonStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/roboto_flex</item>
        <item name="android:textFontWeight">500</item>
        <item name="cornerRadius">10dp</item>
        <item name="strokeColor">@color/matule_input_stroke</item>
        <item name="strokeWidth">1dp</item>
    </style>
</resources>